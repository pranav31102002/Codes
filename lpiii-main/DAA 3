def fractional_knapsack():
    weights = [10, 20, 30]
    values = [60, 100, 120]
    capacity = 50
    res = 0

    # Sort items by value/weight ratio (descending)
    for w, v in sorted(zip(weights, values), key=lambda x: x[1]/x[0], reverse=True):
        if capacity == 0:
            break
        if w > capacity:
            res += v * (capacity / w)
            capacity = 0
        else:
            res += v
            capacity -= w

    print("Maximum value in Knapsack =", res)

# Run program
fractional_knapsack()
